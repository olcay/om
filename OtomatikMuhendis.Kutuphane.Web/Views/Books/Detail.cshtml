@model BookViewModel

@{
    ViewBag.Title = Model.Book.Title;
}
<div class="row top-buffer">
    <div class="col-md-12">
        <small>
            <a asp-controller="Home" asp-action="Index">Library</a> >
            <a asp-controller="Profiles" asp-action="Index" asp-route-userName="@Model.Book.Shelf.CreatedBy.Name">Shelves of @Model.Book.Shelf.CreatedBy.Name</a> >
            <a asp-controller="Shelves" asp-action="Detail" asp-route-shelfId="@Model.Book.ShelfId">@Model.Book.Shelf.Title</a>
        </small>
    </div>
</div>


<div class="row top-buffer">
    <div class="col-md-2">
        <img src="@Html.Raw(Model.Book.BookDetail.ImageLink ?? "/images/book.jpg")" alt="@Model.Book.Title" class="img-responsive" />

    </div>
    <div class="col-md-10">
        <h2>@Model.Book.Title</h2>
        <h3>@Model.Book.BookDetail.Subtitle</h3>
        <p>Published by @Model.Book.BookDetail.Publisher on @Model.Book.BookDetail.PublishedYear</p>

        <p>@Model.Book.BookDetail.Description</p>
    </div>

</div>