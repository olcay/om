@using OtomatikMuhendis.Kutuphane.Web.Enums
@{
    Layout = "_Layout";
}

<div class="row top-buffer">
    <div class="col-md-3">
        @RenderSection("UserInfo")
    </div>
    <div class="col-md-9">
        <div class="row">
            <div class="col-md-12">
                <ul class="nav nav-tabs">
                    <li role="presentation" @Html.Raw(ViewData[ViewDataParameters.Tab].ToString() == ProfileTabs.Shelves ? "class=\"active\"":"") ><a asp-controller="Profiles" asp-action="Index" asp-route-userId="@ViewData[ViewDataParameters.UserId]" asp-route-tab="@ProfileTabs.Shelves">Books</a></li>
                    <li role="presentation" @Html.Raw(ViewData[ViewDataParameters.Tab].ToString() == ProfileTabs.Stars ? "class=\"active\"":"") ><a asp-controller="Profiles" asp-action="Index" asp-route-userId="@ViewData[ViewDataParameters.UserId]" asp-route-tab="@ProfileTabs.Stars">Stars</a></li>
                    <li role="presentation" @Html.Raw(ViewData[ViewDataParameters.Tab].ToString() == ProfileTabs.Followers ? "class=\"active\"":"") ><a href="#">Followers</a></li>
                    <li role="presentation" @Html.Raw(ViewData[ViewDataParameters.Tab].ToString() == ProfileTabs.Following ? "class=\"active\"":"") ><a href="#">Following</a></li>
                </ul>
            </div>
        </div>
    <div class="row top-buffer">
        <div class="col-md-12">
        @RenderBody()
        </div>
    </div>
    </div>
</div>

@section Scripts
{
    @RenderSection("Scripts", false)
}
