@model ShelfViewModel

<div class="panel @(Model.IsPublic ? "panel-default" : "panel-warning")">
    <!-- Default panel contents -->
    <div class="panel-heading">
        <div class="row">
            <div class="col-md-10">
                <h3 class="panel-title">
                    <span class="glyphicon @(Model.IsPublic ? "glyphicon-align-right rotate90" : "glyphicon-eye-close") "></span>
                    <a asp-controller="Shelves" asp-action="Detail" asp-route-shelfId="@Model.Id" asp-route-slug="@Model.Slug">@Model.Title</a>
                </h3>
            </div>
            <div class="col-md-2">
                @if (Model.ShowActions)
                {
                    <button data-shelf-id="@Model.Id" type="button" class="btn @(Model.IsStarred ? "btn-warning" : "btn-default")  btn-xs pull-right js-toggle-star">
                        <span class="oi oi-star" title="Star" aria-hidden="true"></span>
                    </button>
                }
            </div>
        </div>
    </div>
    <div class="panel-body">
        <p><a asp-controller="Profiles" asp-action="Index" asp-route-userName="@Model.CreatedBy.Name">@Model.CreatedBy.Name</a> on @Model.CreationDate.ToLongDateString()</p>
    </div>
    <!-- Table -->
    <table class="table table-hover">
        <tbody>
            @{ var i = 0;}
            @foreach (var book in Model.Items)
            {
                <tr> <th class="col-md-1" scope="row">@(++i)</th> <td>@book.Title</td> </tr>
                if (i == 5)
                {
                    break;
                }
            }
            <tr>
                <th class="col-md-1" scope="row">&hellip;</th>
                <th>
                    <a asp-controller="Shelves" asp-action="Detail" asp-route-shelfId="@Model.Id" asp-route-slug="@Model.Slug">more</a>
                </th>
            </tr>
        </tbody>
    </table>
</div>
