@model ShelfFormViewModel
@{
    Layout = "";
}

<form asp-action="Create">
    <div class="form-group">
        <label asp-for="Title"></label>
        <input asp-for="Title" class="form-control" required="required" />
        <div class="invalid-feedback">A title is required to create a new shelf.</div>
    </div>
    <div class="form-group">
        <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" name="IsPublic" id="radIsPublic" value="true" checked>
            <label class="form-check-label" for="radIsPublic">Public</label>
        </div>
        <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" name="IsPublic" id="radIsPrivate" value="false">
            <label class="form-check-label" for="radIsPrivate">Private</label>
        </div>
    </div>
</form>
